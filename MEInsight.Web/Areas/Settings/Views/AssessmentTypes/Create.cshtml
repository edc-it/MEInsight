@model MEInsight.Entities.Reference.RefAssessmentType

@{
    ViewData["Title"] = @Localizer["Create"].Value + " " + @Localizer["Assessment Type"].Value;
}

<h2>@Localizer["Create"]</h2>

<h4>@Localizer["Assessment Type"]</h4>
<hr />
<div class="row">
    <div class="col-md-6 col-sm-8">
        <form asp-action="Create" id="main-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" name="ParentId" value="@ViewBag.ParentId" />

            <div class="mb-3" asp-enabled="AssessmentTypeCode">
                <!--input start-->
                <label asp-for="AssessmentTypeCode" class="form-label"></label>
                <input asp-for="AssessmentTypeCode" autocomplete="off" class="form-control" />
                <span asp-validation-for="AssessmentTypeCode" class="text-danger"></span>
                <!--input end-->
            </div>


            <div class="mb-3" asp-enabled="AssessmentType">
                <!--input start-->
                <label asp-for="AssessmentType" class="form-label"></label>
                <input asp-for="AssessmentType" autocomplete="off" class="form-control" />
                <span asp-validation-for="AssessmentType" class="text-danger"></span>
                <!--input end-->
            </div>

            <!-- button group start -->
            <div class="mb-3 text-end mt-5">
                <a id="cancelbutton" class="btn btn-secondary me-2" asp-action="Index" asp-route-id="@ViewBag.ParentId">
                    <i class="fas fa-times"></i> @Localizer["Cancel"]
                </a>
                <button id="submitbutton" type="submit" value="Create" class="btn btn-primary ladda-button" data-style="expand-left" data-spinner-color="white">
                    <span class="ladda-label">
                        <i class="fas fa-check"></i> @Localizer["Create"]
                    </span>
                </button>
            </div>
            <!-- button group end -->
        </form>
    </div>
</div>

@section Styles {
    @{await Html.RenderPartialAsync("_CreateStylesPartial");}
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CreateScriptsPartial");}
}
