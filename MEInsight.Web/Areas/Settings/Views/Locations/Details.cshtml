@model MEInsight.Entities.Reference.RefLocation

@{
    ViewData["Title"] = @Localizer["Location"].Value + " " + @Localizer["Details"].Value;
}

<h2>@Localizer["Details"]</h2>

<div>
    <h4>@Localizer["Location"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocationName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Latitude)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Longitude)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocationTypes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocationTypes.LocationType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParentLocations)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParentLocations.RefLocationId)
        </dd>
    </dl>

    <hr />
    <dl class="row">
    </dl>


</div>
<div>
        <!--footer buttons start-->
        <div class="row mt-5">
            <div class="col">
                <a asp-action="Index" asp-route-id="@ViewBag.ParentId" class="btn btn-secondary mr-1"><i class="fas fa-chevron-left"></i> @Localizer["Back to List"]</a>
                <a policy="RequireEditRole" asp-action="Edit" asp-route-id="@Model.RefLocationId" class="btn btn-primary"><i class="fas fa-pencil-alt"></i> @Localizer["Edit"]</a>
            </div>
            <div class="col text-right"></div>
        </div>
        <!--footer buttons end-->
</div>
