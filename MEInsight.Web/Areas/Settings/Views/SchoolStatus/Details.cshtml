@model MEInsight.Entities.Reference.RefSchoolStatus

@{
    ViewData["Title"] = @Localizer["School Status"].Value + " " + @Localizer["Details"].Value;
}

<h2>@Localizer["Details"]</h2>

<div>
    <h4>@Localizer["School Status"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolStatusCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolStatusCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolStatus)
        </dd>
    </dl>

    <hr />
    <dl class="row">
    </dl>


</div>
<div>
        <!--footer buttons start-->
        <div class="row mt-5">
            <div class="col">
                <a asp-action="Index" asp-route-id="@ViewBag.ParentId" class="btn btn-secondary me-1"><i class="fas fa-chevron-left"></i> @Localizer["Back to List"]</a>
