@model MEInsight.Entities.Programs.Program

@{
    ViewData["Title"] = @Localizer["Program"].Value + " " + @Localizer["Delete"].Value;
}

<h2>@Localizer["Delete"]</h2>

<div>
    <h4>@Localizer["Program"]</h4>
    <hr />
    @if (ViewBag.hasRelated == true)
    {
            <div class="alert alert-danger border-red-300 shadow-sm" role="alert">
                <i class="fas fa-times-circle me-2"></i> @String.Format(Localizer.GetString("You cannot delete this record. You must first delete {0} related records."), ViewBag.RelatedCount ?? 0)
            </div>
    }
    else
    {
            <div class="alert alert-danger border-red-300 shadow-sm" role="alert">
                <i class="fas fa-times-circle me-2"></i> @Localizer["Are you sure you want to delete this?"]
            </div>
    }
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProgramName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ProgramName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Max)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Max)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Min)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Min)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.HasAssessment)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.HasAssessment)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DisplayMarks)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DisplayMarks)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProgramTypes)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ProgramTypes.ProgramType)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProgramDeliveryTypes)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ProgramDeliveryTypes.ProgramDeliveryType)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.AttendanceUnits)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.AttendanceUnits.AttendanceUnit)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OrganizationTypes)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OrganizationTypes.OrganizationType)
    </dd>
</dl>
    <hr />
    <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Model.CreatedDate?.ToLocalTime().ToString()
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModifiedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModifiedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </dt>
            <dd class="col-sm-10">
                @Model.ModifiedDate?.ToLocalTime().ToString()
            </dd>
    </dl>
    
    <form asp-action="Delete" id="main-form">
        <input type="hidden" asp-for="ProgramId" />
            <!-- button group start -->
            <div class="form-group mt-5">
                <a id="cancelbutton" class="btn btn-secondary me-2" asp-action="Index" asp-route-id="@ViewBag.ParentId">
                    <i class="fas fa-times"></i> @Localizer["Cancel"]
                </a>
                @if (ViewBag.hasRelated != true)
                {
                <button id="submitbutton" type="submit" value="Delete" class="btn btn-danger ladda-button" data-style="expand-left" data-spinner-color="white">
                    <span class="ladda-label">
                        <i class="fas fa-check"></i> @Localizer["Delete"]
                    </span>
                </button>
                }
            </div>
            <!-- button group end -->
    </form>
</div>
@section Styles {
    @{await Html.RenderPartialAsync("_DeleteStylesPartial");}
}
@section Scripts {
    @{await Html.RenderPartialAsync("_DeleteScriptsPartial");}
}
