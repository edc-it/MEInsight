@model MEInsight.Entities.Core.Student

@{
    ViewData["Title"] = @Localizer["Create"].Value + " " + @Localizer["Student"].Value;
}

<h2>@Localizer["Create"]</h2>

<h4>@Localizer["Student"]</h4>
<hr />
