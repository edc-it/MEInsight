@model MEInsight.Entities.TLM.TLMDistribution

@{
    ViewData["Title"] = @Localizer["TLMDistribution"].Value + " " + @Localizer["Delete"].Value;
}

<h2>@Localizer["Delete"]</h2>

<div>
    <h4>@Localizer["TLMDistribution"]</h4>
    <hr />
    @if (ViewBag.hasRelated == true)
    {
            <div class="alert alert-danger border-red-300 shadow-sm" role="alert">
                <i class="fas fa-times-circle me-2"></i> @String.Format(Localizer.GetString("You cannot delete this record. You must first delete {0} related records."), ViewBag.RelatedCount ?? 0)
            </div>
    }
    else
    {
            <div class="alert alert-danger border-red-300 shadow-sm" role="alert">
                <i class="fas fa-times-circle me-2"></i> @Localizer["Are you sure you want to delete this?"]
            </div>
    }
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.TLMDistributionPeriods)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.TLMDistributionPeriods.PeriodName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.RegistrationDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.RegistrationDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OrganizationsFrom)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OrganizationsFrom.OrganizationName) (@Html.DisplayFor(model => model.OrganizationsFrom.OrganizationCode))
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OrganizationsTo)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OrganizationsTo.OrganizationName) (@Html.DisplayFor(model => model.OrganizationsTo.OrganizationCode))
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ShippedDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ShippedDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ReceivedDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ReceivedDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ReceivedBy)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ReceivedBy)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.TrackingCode)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.TrackingCode)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Url)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Url)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FileName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FileName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.TLMDistributionStatus)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.TLMDistributionStatus.DistributionStatus)
    </dd>

    @if (Model.FileName != null)
    {
        <dt class="col-sm-2">
            @Localizer["Document"]
        </dt>
        <dd class="col-sm-10">
            <a target="_blank" href="@Model.Url">@Localizer["TLM Distribution"]</a>
        </dd>
    }
</dl>
    <hr />
    <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Model.CreatedDate?.ToLocalTime().ToString()
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModifiedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModifiedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </dt>
            <dd class="col-sm-10">
                @Model.ModifiedDate?.ToLocalTime().ToString()
            </dd>
    </dl>
    
    <form asp-action="Delete" id="main-form">
        <input type="hidden" asp-for="TLMDistributionId" />
            <!-- button group start -->
            <div class="form-group mt-5">
                <a id="cancelbutton" class="btn btn-secondary me-2" asp-action="Index" asp-route-id="@ViewBag.ParentId">
                    <i class="fas fa-times"></i> @Localizer["Cancel"]
                </a>
                @if (ViewBag.hasRelated != true)
                {
                <button id="submitbutton" type="submit" value="Delete" class="btn btn-danger ladda-button" data-style="expand-left" data-spinner-color="white">
                    <span class="ladda-label">
                        <i class="fas fa-check"></i> @Localizer["Delete"]
                    </span>
                </button>
                }
            </div>
            <!-- button group end -->
    </form>
</div>
@section Styles {
    @{await Html.RenderPartialAsync("_DeleteStylesPartial");}
}
@section Scripts {
    @{await Html.RenderPartialAsync("_DeleteScriptsPartial");}
}
